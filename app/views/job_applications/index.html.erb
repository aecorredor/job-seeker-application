<% provide(:title, 'All Applications') %>

<div class="show-title"><h1>Showing All Applications</h1></div>
<div class="all-container">
    <% @job_applications.each_with_index do |application, index| %>
        <% @seeker = Seeker.find(application.seeker_id) %>
        <div class=<%= "index-item-#{index % 2}" %>>
            <div class="item-name">
                <%= "#{@seeker.first_name} #{@seeker.last_name}'s Application" %>
            </div>
            
            <div class="item-id">
                Object ID: <%= application.id %>
            </div>
            
            <div class="item-edit-link">
                <%= link_to "Edit Data", edit_job_application_path(application), class: "btn btn-default" %>
            </div>
        </div>
    <% end %>
</div>