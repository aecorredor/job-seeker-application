<% if @employer.errors.any? %>
    <div class="error_explanation">
        <div class="alert alert-danger">
            The form contains <%= pluralize(@employer.errors.count, "error") %>.
        </div>
        <ul>
            <% @employer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>